{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "E Server",
    "description": "REST API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:4040",
  "basePath": "/api/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {

    "/login": {
        "post": {
            "tags": ["Login"],
            "description": "User login",
            "parameters": [
                {
                    "name": "user",
                    "in": "body",
                    "description": "User login"
                }
            ],
            "produces": ["application/json"],
            "responses": {
                "200": {"description": "Authenticate user and return the token"}
            }
        }
    },

    "/reports/head-count": {
        "parameters": [
            {
                "username": "username",
                "required": true,
                "description": "username",
                "type": "string"
            }
        ],
        "post": {
            "tags": ["Reports"],
            "summary": "Get head count details for the username",
            "responses": {
                "200": {"description": "Headcount details found"}
            }
        }
    }

  }
}